@page
@model APPLogin.Pages.LoginModel
@{
    ViewBag.Title = "LOGIN";
}

<div id="loading">
    <div id="loadingcontent" class="divcenter">
        <div class="vstack divcenter text-center">
            <img src=@Model.loader style="width:120px" />
            <span class="fs-6 text-white mt-2">Please wait</span>
        </div>
    </div>
</div>

 <div class="vstack divcontainer divcenter">
    <div class="row divheader">
        <img class="imglogo" src="img/svg/pimeslogo.svg" alt="pimeslogo" />
    </div>
    <div class="row divbody">
        <div class="vstack mt-5">
            <div class="poscenter" style="height:65px;">
                <span class="fs-1 divtitle">@Model.pagetitle</span>
            </div>
            <div class="poscenter mx-5" style="height:70px; ">
                <input id="txtPassword" type="password" class="form-control text-center" placeholder="Enter password" />
            </div>
            <div class="poscenter" style="height:70px">
                <button id="btnLogin" class="btn btn-primary text-center"><i class="bi bi-box-arrow-in-right"></i>Login</button>
            </div>
        </div>
    </div>
    <div style="margin-top:-25px">
        <p class="text-white" style="font-size:12px">Ver. @Model.webversion</p>
    </div>
</div>

<div id="partialModal" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog" style="max-width: 100%; width:550px;">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Welcome!</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button id="btnNext" type="button" class="btn btn-primary" data-bs-dismiss="modal"><i class="bi bi-arrow-right-circle-fill"></i> Continue</button>
            </div>
        </div>
    </div>
</div>