@using QA_Audit_Fresh.Models
@model List<CPARModel>

@if (Model.Count > 0)
{
    <div class="tableWrapper col-lg-12">
        <table class="table table-striped table-hover" id="cparsTable">
            <thead class="table-primary overflow-x-scroll">
                <tr>
                    <th scope="col" hidden>#</th>
                    <th scope="col" hidden>Audit Plan</th>

                    <th class="header" scope="col">Respondent</th>
                    <th class="header" scope="col">Requestor</th>
                    

                    <th class="header" scope="col">Response Due</th>
                    @* <th class="header" scope="col">ApprovalDate</td> *@

                    @* <th class="header" scope="col">ProblemStatement</td> *@

                    <th class="header" scope="col">Actions</th>
                    @* <th class="header" scope="col">CheckedBy</td> *@
                    @* <th class="header" scope="col">ApprovedBy</td> *@
                </tr>
            </thead>
            <tbody>
                @foreach (var cpar in Model)
                {
                    <tr>
                        <td hidden>@cpar.CPARId</td>
                        <td hidden>@cpar.PlanId</td>
                        <td>@cpar.Respondent</td>
                        <td>@cpar.Requestor</td>
                        <td>@cpar.ResponseDueDate.Value.ToShortDateString()</td>
                        <td data-cparid="@cpar.CPARId">
                            <button type="button" class="btn btn-primary cpar-view fa-solid fa-pen-to-square" data-bs-toggle="modal" data-bs-target="#readCPAR"></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

} else 
{
    <partial name="Partials/_EmptyTable"></partial>
}
<button class="form-control fa-solid fa-plus" data-bs-toggle="modal" data-bs-target="#createCPAR" />
