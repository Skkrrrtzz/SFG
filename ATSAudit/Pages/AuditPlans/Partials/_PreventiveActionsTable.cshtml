<h6 class="form-text text-center">Preventive Actions</h6>
<div class="tableWrapper col-12">
    <table class="table table-striped" id="CPARsTable">
    @if (Model.Count > 0)
    {
        <thead>
            <tr>
                <th scope="col" hidden>PreventiveActionId</th>
                <th scope="col" hidden>PlanId</th>
                <th class="header" scope="col">Preventive Action</th>
                <th class="header" scope="col">Target Date</th>
                <th class="header" scope="col">Responsible Person</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var preventiveAction in Model)
                {
                    <tr>
                        <td hidden>@preventiveAction.PreventiveActionId</td>
                        <td hidden>@preventiveAction.CPARId</td>
                        <td>@preventiveAction.PreventiveActionDescription</td>
                        <td>@preventiveAction.TargetDate</td>
                        <td>@preventiveAction.Responsible</td>
                    </tr>
                }
        </tbody>
    } else 
    {
        <partial name="Partials/_EmptyTable"></partial>
    }
    </table>
</div>
<div class="d-flex ">
    <button class="form-control" id="readCPARPreventiveActionSubmit">
        <i class="fa-solid fa-plus"></i> 
    </button>
</div>