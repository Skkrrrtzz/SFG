@using ATSAudit.Models
@model List<CorrectionModel>

@{
    var Corrections = Model;
}

@* <h6 class="form-text text-center">Corrections</h6> *@
@if (Corrections.Count > 0)
{
<table class="table table-striped table-sm compact" style="width: 100%" id="correctionsTable">
    <thead class="bg-dark text-white nowrap">
        <tr>
            <th scope="col" hidden>CorrectionId</th>
            <th scope="col" hidden>CPARId</th>
            <th scope="col">Correction (Immediate Action)</th>
            <th scope="col">Escape Cause</th>
            <th scope="col">Action for Escape Cause</th>
            <th scope="col">Status</th>
            <th scope="col">Evidence</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var correction in Corrections)
        {
            <tr>
                <td hidden>@correction.CorrectionId</td>
                <td hidden>@correction.CPARId</td>
                <td>@correction.CorrectionDescription</td>
                <td>@correction.EscapeCause</td>
                <td>@correction.Action</td>

                @{
                    (string badgeClass, string badgeText) status = correction.Status switch 
                    {
                        0 => ( "bg-warning text-black", "Open" ),
                        1 => ( "bg-success", "Closed" ),
                        _ => ( "bg-danger", "Error" )
                    };
                }

                <td><span class="badge @status.badgeClass">@status.badgeText</span></td>
                <td data-cpar-id="@correction.CPARId" data-correction-id="@correction.CorrectionId">
                    @if (correction.HasEvidence)
                    {
                    <div hidden>Has</div>
                    <button class="btn btn-primary viewEvidenceButton form-control fa-solid fa-eye" data-bs-target="#viewEvidence" data-bs-toggle="modal"></button>
                    }
                    else
                    {
                    //Button for uploading files
                    <div hidden>Empty</div>
                    <button class="uploadEvidenceButton form-control fa-solid fa-file" data-bs-target="#uploadEvidence" data-bs-toggle="modal"></button>
                    }
                </td>
                <td class="d-flex justify-content-around">
                    @if (correction.HasEvidence)
                    {
                    <button type="button" class="btn btn-success correction-close fa-solid fa-square-check"></button>
                    }
                    <button type="button" class="btn btn-danger correction-delete fa-solid fa-trash"></button>
                    <button type="button" class="btn btn-secondary correction-edit fa-solid fa-pen-to-square"></button>
                </td>
            </tr>
        }
    </tbody>
</table>
} else 
{
<partial name="Partials/_EmptyTable"></partial>
}

