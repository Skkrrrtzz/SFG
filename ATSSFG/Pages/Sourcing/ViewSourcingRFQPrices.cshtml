@page
@model ATSSFG.Pages.Sourcing.ViewSourcingRFQPricesModel
@{
}
@Html.AntiForgeryToken()
<div class="card p-2 bg-light mb-2">
    <div class="row mb-1">
        <div class="col-sm-4 col-lg-8">
            <h4 class="d-inline-block mr-2">Project Name: </h4>
            <h5 id="projectName" class="d-inline-block"></h5>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-4 col-lg-4">
            <div class="mb-3">
                <label for="PartNumber" class="form-label fw-bold">Part Numbers</label>
                <select class="form-select" aria-label="part numbers" id="partNumbers">
                    <option selected disabled value="">Select Part Numbers</option>
                </select>
            </div>
            <div class="card p-3">
                <div class="mb-2">
                    <label for="PartNumber" class="form-label fw-bold">Part Number</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control bg-light" id="PartNumber">
                    </div>
                </div>
                <div class="mb-2">
                    <label for="Description" class="form-label fw-bold">Description</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control bg-light" id="Description">
                    </div>
                </div>
                <div class="mb-2">
                    <label for="MPN" class="form-label fw-bold">MPN</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control bg-light" id="MPN">
                    </div>
                </div>
                <div class="mb-2">
                    <label for="Manufacturer" class="form-label fw-bold">Manufacturer</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control bg-light" id="Manufacturer">
                    </div>
                </div>
                <div class="mb-2">
                    <label for="Commodity" class="form-label fw-bold">Commodity</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control bg-light" id="Commodity">
                    </div>
                </div>
                <div class="mb-2">
                    <label for="Qty" class="form-label fw-bold">Quantity Per Assembly</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control bg-light" id="Qty">
                    </div>
                </div>
                <div class="mb-2">
                    <label for="UOM" class="form-label fw-bold">UOM</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control bg-light" id="UOM">
                    </div>
                </div>
                <div class="mb-2">
                    <label for="Parts" class="form-label fw-bold">Common or Unique Parts</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control bg-light" id="Parts">
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-8 col-lg-8 my-2">
            <div class="row" id="prices-container">
            </div>
        </div>
        <div class="p-3">
            <div class="row">
                <div class="col-md-6 d-flex align-items-center">
                    <label for="SuggestedSupplier" class="form-label fw-bold text-primary me-2">Suggested Supplier by the Cost Engineer:</label>
                    <p class="text-dark mt-2" id="SuggestedSupplier"></p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 d-flex align-items-center">
                    <label for="Comments" class="form-label fw-bold text-primary me-2">Comments:</label>
                    <textarea class="form-control" id="Comments" rows="2" readonly></textarea>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/JavaScript/ViewRFQPrices.js"></script>
}